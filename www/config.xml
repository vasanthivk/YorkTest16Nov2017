        <splash density="port-mdpi" src="www/res/screens/android/drawable-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="www/res/screens/android/drawable-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="www/res/screens/android/drawable-port-xhdpi-screen.png" />
        <splash density="port-xxhdpi" src="www/res/screens/android/drawable-port-xxhdpi-screen.png" />
        <splash density="port-xxxhdpi" src="www/res/screens/android/drawable-port-xxxhdpi-screen.png" />
    </platform>
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-device" spec="~1.1.5" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="We use your location to help improve our data accuracy" />
    </plugin>
    <plugin name="cordova-plugin-network-information" spec="1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.2" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.5" />
</widget>
